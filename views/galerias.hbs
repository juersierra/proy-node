<div class="container px-0 px-md-1 mx-0 mx-sm-auto">
    <h1 class="d-inline-block px-2">
        <div class="border-top border-bottom p-0 m-0">
            {{titulo}}
        </div>
    </h1>
    <div class="container">
        <div class="text-center m-5">
            <h2>Lista de mensajes</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID MENSAJE</th>
                        <th>NOMBRE</th>
                        <th>EMAIL</th>
                        <th>ASUNTO</th>
                        <th>MENSAJE</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each results}}
                    <tr>
                        <td>{{idmensajes}}</td>
                        <td>{{nombre}}</td>
                        <td>{{email}}</td>
                        <td>{{asunto}}</td>
                        <td>{{mensaje}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>